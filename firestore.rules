rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    match /managerFeedback/{sessionId} {
      allow read, write: if request.auth != null; // Restrict further by role if needed
    }

    match /reports/{sessionId} {
      allow read: if request.auth != null;
      allow write: if false; // Written by Cloud Functions only
    }

    match /redemptions/{uid}/{doc} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}


