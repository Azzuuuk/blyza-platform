{
  "rules": {
    ".read": false,
    ".write": false,
    "lobbyCodes": {
      "$code": {
        ".read": "auth != null",
        ".write": "auth != null && !data.exists() && root.child('lobbies').child(newData.child('sessionId').val()).child('managerUid').val() == auth.uid",
        "sessionId": { ".validate": "newData.isString() && newData.val().length > 0" }
      }
    },
    "lobbies": {
      "$sessionId": {
        ".read": "auth != null && root.child('lobbies').child($sessionId).child('players').child(auth.uid).exists()",
        ".write": "auth != null && ( (!data.exists() && newData.child('managerUid').val() == auth.uid) || root.child('lobbies').child($sessionId).child('players').child(auth.uid).exists() )",
        "status": {
          ".write": "auth != null && root.child('lobbies').child($sessionId).child('managerUid').val() == auth.uid",
          ".validate": "newData.val() == 'lobby' || newData.val() == 'in_progress' || newData.val() == 'finished'"
        },
        "managerUid": {
          ".read": "auth != null"
        },
        "players": {
          "$uid": {
            ".read": "auth != null && root.child('lobbies').child($sessionId).child('players').child(auth.uid).exists()",
            ".write": "auth != null && ($uid == auth.uid || root.child('lobbies').child($sessionId).child('managerUid').val() == auth.uid)",
            "connected": { ".validate": "newData.isBoolean()" },
            "displayName": { ".validate": "newData.isString() && newData.val().length <= 100" },
            "role": { ".validate": "newData.val() == null || newData.isString()" },
            "ready": { ".validate": "newData.isBoolean()" },
            "joinedAt": { ".validate": "newData.isNumber()" },
            "lastSeen": { ".validate": "newData.isNumber()" }
          }
        }
      }
    },
    "games": {
      "nightfall": {
        "$sessionId": {
          ".read": "auth != null && root.child('lobbies').child($sessionId).child('players').child(auth.uid).exists()",
          ".write": "auth != null && root.child('lobbies').child($sessionId).child('players').child(auth.uid).exists()",
          "game": {
            "phase": {
              ".write": "auth != null && root.child('lobbies').child($sessionId).child('managerUid').val() == auth.uid",
              ".validate": "newData.val() == 'LOBBY' || newData.val() == 'IN_PROGRESS' || newData.val() == 'COMPLETE'"
            }
          }
        }
      }
    },
    "analytics": {
      "$sessionId": {
        ".read": "auth != null && root.child('lobbies').child($sessionId).child('players').child(auth.uid).exists()",
        ".write": "auth != null && root.child('lobbies').child($sessionId).child('managerUid').val() === auth.uid"
      }
    },
    "presence": {
      "$uid": {
        ".read": "auth != null && $uid === auth.uid",
        ".write": "auth != null && $uid === auth.uid"
      }
    }
  }
}


