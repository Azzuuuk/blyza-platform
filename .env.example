# Environment Configuration
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:3000

# Optional: OpenAI
OPENAI_API_KEY=

# Optional: SMTP (for email report delivery)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Security
JWT_SECRET=change_me_jwt_secret

# API Keys (optional gates; if unset endpoints are open for dev)
# Set these in production to restrict access
NIGHTFALL_API_KEY=
DASHBOARD_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Future: DATABASE_URL=postgresql://user:pass@host:port/dbname
# AUTO_MIGRATE=true  # Run idempotent migrations automatically at server start
