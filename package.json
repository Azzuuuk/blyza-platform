{
  "name": "blyza-platform",
  "version": "1.0.0",
  "description": "AI-powered team-building platform for corporate teams",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && PORT=3001 node index.js",
    "client": "cd client && npm run dev",
    "build": "echo 'Skipping client build on Railway server deploy'",
    "client:build": "cd client && npm run build",
    "start": "node server/index.js",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "setup": "npm run install-all",
    "migrate": "node server/scripts/migrate.js",
    "postinstall": "npm run migrate || true"
  },
  "keywords": [
    "team-building",
    "AI",
    "multiplayer",
    "corporate",
    "games"
  ],
  "author": "Blyza Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.6.7",
    "nodemailer": "^6.9.7",
    "openai": "^4.104.0",
    "pdf-lib": "^1.17.1",
    "pg": "^8.11.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18"
  }
}
